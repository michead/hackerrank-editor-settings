{
  "manifest_version": 2,

  "name": "HackerRank Editor Settings",
  "description": "This extension allows the user to save HackerRank's editor settings.",
  "version": "1.0",

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "*://*.hackerrank.com/"
  ]
}